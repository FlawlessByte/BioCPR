<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:text="Random msgs!"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1565c0"
                android:minHeight="180dp"
                android:layout_margin="16dp"
                style="@style/Widget.MaterialComponents.CardView">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/chestCompRatioHead"
                        android:padding="8dp"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Chest Compression Ratio"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout1"
                        android:layout_below="@id/chestCompRatioHead"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/chestCompRatioValue"
                            android:layout_marginLeft="16dp"
                            android:padding="8dp"
                            android:textColor="@android:color/white"
                            android:textSize="60sp"
                            android:textStyle="bold"
                            android:text="0.0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/chestCompRatioUnit"
                            android:padding="8dp"
                            android:textColor="@android:color/white"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:text="cm"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/chestCompRatioRequiredRate"
                            android:padding="8dp"
                            android:gravity="right"
                            android:layout_marginRight="8dp"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:text="Req. Rate : 5 cm"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/chestCompRatioMsg"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:layout_below="@id/linearLayout1"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Messages Appear Here!"/>



                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1565c0"
                android:minHeight="180dp"
                android:layout_margin="16dp"
                style="@style/Widget.MaterialComponents.CardView">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/oxygenSatHead"
                        android:padding="8dp"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Oxygen Saturation"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout2"
                        android:layout_below="@id/oxygenSatHead"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/oxygenSatValue"
                            android:layout_marginLeft="16dp"
                            android:padding="8dp"
                            android:textColor="@android:color/white"
                            android:textSize="60sp"
                            android:textStyle="bold"
                            android:text="00"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/oxygenSatUnit"
                            android:padding="8dp"
                            android:textColor="@android:color/white"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:text="%"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/oxygenSatRate"
                            android:padding="8dp"
                            android:gravity="right"
                            android:layout_marginRight="8dp"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:text="Above 50%"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/oxygenSatMsg"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:layout_below="@id/linearLayout2"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Messages Appear Here!"/>



                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1565c0"
                android:minHeight="180dp"
                android:layout_margin="16dp"
                style="@style/Widget.MaterialComponents.CardView">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardiacOutputHead"
                        android:padding="8dp"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Cardiac Output"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout3"
                        android:layout_below="@id/cardiacOutputHead"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cardiacOutputalue"
                            android:layout_marginLeft="16dp"
                            android:padding="8dp"
                            android:textColor="@android:color/white"
                            android:textSize="60sp"
                            android:textStyle="bold"
                            android:text="0.0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cardiacOutputUnit"
                            android:padding="8dp"
                            android:textColor="@android:color/white"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:text="ltr"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/cardiacOutputRate"
                            android:padding="8dp"
                            android:gravity="right"
                            android:layout_marginRight="8dp"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:text="Req. Rate : 4 ltr"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardiacOutputMsg"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:layout_below="@id/linearLayout3"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Messages Appear Here!"/>



                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </ScrollView>



</LinearLayout>